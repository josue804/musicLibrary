{{yield}}


{{#if newSongForm}}
  <form>
    <div class="form-group">
      <label for="name">Song Name</label>
      {{input id="name" value=name class="form-control text-center"}}
    </div>
    <div class="form-group">
      <label for="artist">Artist</label>
      {{#x-select action="makeSelection" id="artist" default="Unknown" class="form-control text-center"}}
        {{#each model.artists as |artist|}}
          {{#x-option value=artist}}{{artist.name}}{{/x-option}}
        {{/each}}
      {{/x-select}}
    </div>
    <div class="form-group">
      <label for="file">Song URL</label>
      {{input id="file" value=file class="form-control text-center"}}
    </div>
  </form>
  <button class="btn btn-primary" {{action 'saveSong'}}>Save Song</button>
  <button class="btn btn-warning" {{action 'songFormHide'}}>Nevermind!</button>
{{else}}
  <button class="btn btn-primary" {{action 'songFormShow'}}>Add New Song</button>
{{/if}}
